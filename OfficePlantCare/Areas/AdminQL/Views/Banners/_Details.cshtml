@model OfficePlantCare.Models.Banner
<link rel="stylesheet" href="~/assets/css/details.css" />

<div class="modal-body p-0">
    <div class="card shadow-sm border-0 rounded-lg p-1">
        <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-info-circle me-2"></i> CHI TIẾT THÔNG TIN</h3>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <label class="control-label fw-bold text-muted">
                        <i class="fa-solid fa-heading me-2"></i>@Html.DisplayNameFor(model => model.Title)
                    </label>
                    <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="2" readonly>@Html.DisplayFor(model => model.Title)</textarea>
                </div>

                <div class="form-group mb-4">
                    <label class="control-label fw-bold text-muted">
                        <i class="fa-solid fa-align-left me-2"></i>@Html.DisplayNameFor(model => model.Description)
                    </label>
                    <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="4" readonly>@Html.DisplayFor(model => model.Description)</textarea>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <label class="control-label fw-bold text-muted">
                        <i class="fa-solid fa-calendar-plus me-2"></i>@Html.DisplayNameFor(model => model.CreatedDate)
                    </label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.CreatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <label class="control-label fw-bold text-muted">
                        <i class="fa-solid fa-calendar-check me-2"></i>@Html.DisplayNameFor(model => model.UpdatedDate)
                    </label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.UpdatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <label class="control-label fw-bold text-muted">
                        <i class="fa-solid fa-toggle-on me-2"></i>@Html.DisplayNameFor(model => model.Status)
                    </label>
                    <div class="form-control rounded-pill bg-light">
                        @if (Model?.Status != null)
                        {
                            if (Model.Status.ToString() == "Hiện")
                            {
                                <span class="badge badge-success px-3 py-1">Hiện</span> <!-- Màu xanh -->
                            }
                            else if (Model.Status.ToString() == "Tạm dừng")
                            {
                                <span class="badge badge-warning px-3 py-1">Tạm dừng</span> <!-- Màu vàng -->
                            }
                            else
                            {
                                <span class="badge badge-danger px-3 py-1">Ẩn</span> <!-- Màu đỏ -->
                            }
                        }
                        else
                        {
                            <span class="badge badge-secondary px-3 py-1">Không xác định</span> <!-- Màu xám nếu giá trị null -->
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Image Section -->
        <div class="form-group mb-4">
            <label class="control-label fw-bold text-muted d-block">
                <i class="fa-solid fa-image me-2"></i>@Html.DisplayNameFor(model => model.Image)
            </label>
            @if (!string.IsNullOrEmpty(Model?.Image))
            {
                <div class="mb-3">
                    <img src="@Url.Content(Model.Image)" alt="Avatar" class="rounded-circle shadow-sm avatar-preview" style="width: 120px; height: 120px; object-fit: cover;" />
                </div>
            }
            else
            {
                <div class="mb-3">
                    <img src="~/images/default-avatar.png" alt="Default Avatar" class="rounded-circle shadow-sm avatar-preview" style="width: 120px; height: 120px; object-fit: cover;" />
                </div>
            }
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadModal('@Url.Action("Edit", "Banners", new { id = Model?.BannerId })')">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>
            <button type="button" class="btn btn-secondary rounded-pill px-4" data-dismiss="modal">
                <i class="fas fa-times me-2"></i>Đóng
            </button>
        </div>
    </div>
</div>