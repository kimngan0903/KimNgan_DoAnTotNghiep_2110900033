@model OfficePlantCare.Models.Banner
<link rel="stylesheet" href="~/assets/css/delete.css" />

<div class="modal-body p-4">
    <div class="card shadow-sm border-0 rounded-lg p-1 text-center">
        <h3 class="text-danger text-center font-weight-bold mb-4"><i class="fa-solid fa-exclamation-triangle me-2"></i> XÁC NHẬN XÓA BANNER</h3>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.BannerId" />

            <!-- Thông tin tối giản -->
            <div class="mb-4">
                <p class="text-muted mb-3">Bạn có chắc chắn muốn xóa <strong>@Model.Title</strong> không?</p>
            </div>

            <!-- Avatar Section -->
            <div class="form-group mb-4">
                <label class="control-label fw-bold text-muted d-block">
                    <i class="fa-solid fa-image me-2"></i>Hình ảnh
                </label>
                @if (!string.IsNullOrEmpty(Model?.Image))
                {
                    <div class="mb-3">
                        <img src="@Url.Content(Model.Image)" alt="Avatar" class="rounded-circle shadow-sm avatar-preview" style="width: 120px; height: 120px; object-fit: cover;" />
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <img src="~/images/default-avatar.png" alt="Default Avatar" class="rounded-circle shadow-sm avatar-preview" style="width: 120px; height: 120px; object-fit: cover;" />
                    </div>
                }
            </div>

            <!-- Buttons -->
            <div class="form-group d-flex gap-3 justify-content-center">
                <button type="submit" class="btn btn-danger rounded-pill px-4">
                    <i class="fa-solid fa-trash me-2"></i>Xóa
                </button>
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Hủy
                </button>
            </div>
        </form>
    </div>
</div>