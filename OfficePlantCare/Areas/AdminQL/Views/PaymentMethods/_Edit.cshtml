@model OfficePlantCare.Models.PaymentMethod

@{
    ViewData["Title"] = "Chỉnh sửa Phương thức thanh toán";
}

<link rel="stylesheet" href="~/assets/css/edit.css" />

<div class="card shadow-sm border-0 rounded-lg p-1">
    <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-pen-to-square me-2"></i>CHỈNH SỬA PHƯƠNG THỨC THANH TOÁN</h3>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PaymentMethodId" />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-credit-card me-2"></i>
                    <label asp-for="MethodName" class="control-label fw-bold text-muted"></label>
                    <input asp-for="MethodName" class="form-control rounded-pill" placeholder="Nhập tên phương thức thanh toán" />
                    <span asp-validation-for="MethodName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="submit" class="btn btn-primary rounded-pill px-4"><i class="fas fa-save me-2"></i>Lưu</button>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}