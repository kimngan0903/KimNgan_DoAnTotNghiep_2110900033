@model OfficePlantCare.Models.OrderDetail

@{
    ViewData["Title"] = "Tạo chi tiết đơn hàng";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<link rel="stylesheet" href="~/assets/css/create.css" />

<div class="pcoded-main-container">
    <div class="pcoded-content">
        <!-- Page Header -->
        <div class="page-header card shadow-sm border-0">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title d-flex justify-content-between align-items-center py-3 ml-3">
                            <h5 class="m-0 text-success font-weight-bold">THÊM MỚI CHI TIẾT ĐƠN HÀNG</h5>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb mb-0 bg-transparent">
                                    <li class="breadcrumb-item"><a asp-area="AdminQL" asp-controller="OrderDetails" asp-action="Index"><i class="feather icon-home"></i></a></li>
                                    <li class="breadcrumb-item"><a asp-action="Index">DANH SÁCH CHI TIẾT ĐƠN HÀNG</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">THÊM MỚI</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm border-0 rounded-lg p-4">
                    <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-cart-shopping me-2"></i>THÊM MỚI CHI TIẾT ĐƠN HÀNG</h3>
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="row">
                            <!-- Cột trái -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <i class="fa-solid fa-shopping-cart me-2"></i>
                                    <label asp-for="OrderId" class="control-label fw-bold text-muted"></label>
                                    <select asp-for="OrderId" class="form-control custom-select rounded-pill" asp-items="ViewBag.OrderId">
                                        <option value="">-- Chọn đơn hàng --</option>
                                    </select>
                                    <span asp-validation-for="OrderId" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <i class="fa-solid fa-briefcase me-2"></i>
                                    <label asp-for="ServiceId" class="control-label fw-bold text-muted"></label>
                                    <select asp-for="ServiceId" class="form-control custom-select rounded-pill" asp-items="ViewBag.ServiceId">
                                        <option value="">-- Chọn dịch vụ --</option>
                                    </select>
                                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <i class="fa-solid fa-map-marker-alt me-2"></i>
                                    <label asp-for="Address" class="control-label fw-bold text-muted"></label>
                                    <input asp-for="Address" class="form-control rounded-pill" placeholder="Nhập địa chỉ" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <i class="fa-solid fa-cubes me-2"></i>
                                    <label asp-for="Quantity" class="control-label fw-bold text-muted"></label>
                                    <input asp-for="Quantity" type="number" class="form-control rounded-pill" placeholder="Nhập số lượng" min="1" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Cột phải -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <i class="fa-solid fa-money-bill me-2"></i>
                                    <label asp-for="PriceId" class="control-label fw-bold text-muted"></label>
                                    <select asp-for="PriceId" class="form-control custom-select rounded-pill" asp-items="ViewBag.PriceId">
                                        <option value="">-- Chọn giá dịch vụ --</option>
                                    </select>
                                    <span asp-validation-for="PriceId" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <i class="fa-solid fa-dollar-sign me-2"></i>
                                    <label asp-for="TotalAmount" class="control-label fw-bold text-muted"></label>
                                    <input asp-for="TotalAmount" type="number" step="0.01" class="form-control rounded-pill" placeholder="Nhập tổng số tiền" min="0" />
                                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <i class="fa-solid fa-note-sticky me-2"></i>
                                    <label asp-for="Notes" class="control-label fw-bold text-muted"></label>
                                    <textarea asp-for="Notes" class="form-control rounded-pill" placeholder="Nhập ghi chú" rows="4"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="form-group d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="fas fa-save me-2"></i>Thêm mới
                            </button>
                            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}