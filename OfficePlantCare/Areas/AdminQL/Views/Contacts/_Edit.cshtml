@model OfficePlantCare.Models.Contact

@{
    ViewData["Title"] = "Chỉnh sửa thông tin liên hệ";
}

<link rel="stylesheet" href="~/assets/css/edit.css" />

<div class="card shadow-sm border-0 rounded-lg p-1">
    <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-pen-to-square me-2"></i>CHỈNH SỬA THÔNG TIN LIÊN HỆ</h3>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        <input type="hidden" asp-for="ContactId" />

        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-envelope me-2"></i>
                    <label asp-for="Email" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Email" class="form-control rounded-pill" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-phone me-2"></i>
                    <label asp-for="Phone" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Phone" class="form-control rounded-pill" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-map-marker-alt me-2"></i>
                    <label asp-for="Address" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Address" class="form-control rounded-pill" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-comment me-2"></i>
                    <label asp-for="Description" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Description" class="form-control rounded-pill" placeholder="Nhập mô tả" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-plus me-2"></i>
                    <label asp-for="CreatedDate" class="control-label fw-bold text-muted"></label>
                    <input asp-for="CreatedDate" type="date" class="form-control rounded-pill" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-save me-2"></i>Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </form>
</div>
