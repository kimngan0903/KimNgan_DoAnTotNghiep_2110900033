@model OfficePlantCare.Models.Feedback

@{
    ViewData["Title"] = "Chỉnh sửa phản hồi";
}

<link rel="stylesheet" href="~/assets/css/edit.css" />

<div class="card shadow-sm border-0 rounded-lg p-1">
    <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-pen-to-square me-2"></i>CHỈNH SỬA PHẢN HỒI</h3>
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        <input type="hidden" asp-for="FeedbackId" />

        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user me-2"></i>
                    <label asp-for="CustomerId" class="control-label fw-bold text-muted"></label>
                    <select asp-for="CustomerId" class="form-control custom-select rounded-pill" asp-items="ViewBag.CustomerId">
                        <option value="">-- Chọn khách hàng --</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-concierge-bell me-2"></i>
                    <label asp-for="ServiceId" class="control-label fw-bold text-muted"></label>
                    <select asp-for="ServiceId" class="form-control custom-select rounded-pill" asp-items="ViewBag.ServiceId">
                        <option value="">-- Chọn dịch vụ --</option>
                    </select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-day me-2"></i>
                    <label asp-for="FeedbackDate" class="control-label fw-bold text-muted"></label>
                    <input asp-for="FeedbackDate" type="date" class="form-control rounded-pill" />
                    <span asp-validation-for="FeedbackDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-star me-2"></i>
                    <label asp-for="Rating" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Rating" class="form-control rounded-pill" placeholder="Nhập điểm đánh giá" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-comment me-2"></i>
                    <label asp-for="Content" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Content" class="form-control rounded-pill" placeholder="Nhập nội dung phản hồi" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
               @*  <div class="form-group mb-4">
                    <i class="fa-solid fa-toggle-on me-2"></i>
                    <label asp-for="Status" class="control-label fw-bold text-muted"></label>
                    <select asp-for="Status" class="form-control custom-select rounded-pill">
                        <option value="Chờ duyệt">Chờ duyệt</option>
                        <option value="Đã duyệt">Đã duyệt</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div> *@
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-save me-2"></i>Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </form>
</div>
