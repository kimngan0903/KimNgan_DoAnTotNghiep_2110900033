@model OfficePlantCare.Models.Service

@{
    ViewData["Title"] = "Chi tiết Dịch vụ";
}

<link rel="stylesheet" href="~/assets/css/details.css" />

<div class="modal-body p-0">
    <div class="card shadow-sm border-0 rounded-lg p-1">
        <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-info-circle me-2"></i> CHI TIẾT DỊCH VỤ</h3>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-concierge-bell me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.ServiceName)</label>
                    <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="2" readonly>@Html.DisplayFor(model => model.ServiceName)</textarea>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-plus me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.CreatedDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.CreatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-check me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.UpdatedDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.UpdatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-toggle-on me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Status)</label>
                    <div class="form-control rounded-pill bg-light">
                        @if (Model?.Status != null)
                        {
                            var status = Model.Status.ToString();
                            if (status == "Đang hoạt động")
                            {
                                <span class="badge badge-success px-3 py-1">Đang hoạt động</span>
                            }
                            else if (status == "Ngừng hoạt động")
                            {
                                <span class="badge badge-danger px-3 py-1">Ngừng hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary px-3 py-1">Không xác định</span>
                            }
                        }
                    </div>

                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <label class="control-label fw-bold text-muted d-block">
                        <i class="fa-solid fa-image me-2"></i>@Html.DisplayNameFor(model => model.Image)
                    </label>
                    @if (!string.IsNullOrEmpty(Model?.Image))
                    {
                        <div class="mb-3">
                            <img src="@Url.Content(Model.Image)" alt="Avatar" class="rounded-circle shadow-sm avatar-preview" style="width: 120px; height: 120px; object-fit: cover;" />
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <img src="~/images/default-avatar.png" alt="Default Avatar" class="rounded-circle shadow-sm avatar-preview" style="width: 120px; height: 120px; object-fit: cover;" />
                        </div>
                    }
                </div>
                <div class="form-group mb-4">
                        <i class="fa-solid fa-list me-2"></i>
                        <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.CategoryService)</label>
                        <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="2" readonly>@Html.DisplayFor(model => model.CategoryService.CategoryServiceName)</textarea>
                    </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadModal('@Url.Action("Edit", "Services", new { id = Model?.ServiceId })')">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>
            <a class="btn btn-secondary rounded-pill px-4" href="@Url.Action("Index")">
                <i class="fas fa-times me-2"></i>Đóng
            </a>
        </div>
    </div>
</div>