@model OfficePlantCare.Models.ServiceDescription

@{
    ViewData["Title"] = "Chi tiết Mô tả dịch vụ";
}

<link rel="stylesheet" href="~/assets/css/details.css" />

<div class="modal-body p-0">
    <div class="card shadow-sm border-0 rounded-lg p-1">
        <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-info-circle me-2"></i> CHI TIẾT MÔ TẢ DỊCH VỤ</h3>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-image me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Image)</label>
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model?.Image))
                        {
                            <img src="@Url.Content(Model.Image)" alt="Service Image" class="rounded shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/default-service.png" alt="Default Service Image" class="rounded shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
                        }
                    </div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-sort-numeric-up me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.StepNumber)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.StepNumber)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-heading me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Title)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Title)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-file-lines me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Content)</label>
                    <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="4" readonly>@Html.Raw(Model?.Content)</textarea>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-plus me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.CreatedDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.CreatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-check me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.UpdatedDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.UpdatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-concierge-bell me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.ServiceId)</label>
                    <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="2" readonly>@Html.DisplayFor(model => model.Service.ServiceName)</textarea>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadModal('@Url.Action("Edit", "ServiceDescriptions", new { id = Model?.DescriptionId })')">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>
            <a class="btn btn-secondary rounded-pill px-4" href="@Url.Action("Index")">
                <i class="fas fa-times me-2"></i>Đóng
            </a>
        </div>
    </div>
</div>