@model OfficePlantCare.Models.Staff

@{
    ViewData["Title"] = "Chi tiết Nhân viên";
}

<link rel="stylesheet" href="~/assets/css/details.css" />

<div class="modal-body p-0">
    <div class="card shadow-sm border-0 rounded-lg p-1">
        <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-info-circle me-2"></i> CHI TIẾT NHÂN VIÊN</h3>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.StaffName)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.StaffName)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-briefcase me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Position)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Position)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-phone me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Phone)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Phone)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-envelope me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Email)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Email)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-image me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Avatar)</label>
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model?.Avatar))
                        {
                            <img src="@Url.Content(Model.Avatar)" alt="Staff Avatar" class="rounded-circle shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/default-avatar.png" alt="Default Avatar" class="rounded-circle shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
                        }
                    </div>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-day me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.BirthDate)</label>
                    <div class="form-control rounded-pill bg-light">@(Model?.BirthDate?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-plus me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.HireDate)</label>
                    <div class="form-control rounded-pill bg-light">@(Model?.HireDate?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-dollar-sign me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Salary)</label>
                    <div class="form-control rounded-pill bg-light">@(Model?.Salary != null ? Model.Salary?.ToString("N0").Replace(",", ".") + " VNĐ" : "N/A")</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-toggle-on me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Status)</label>
                    <div class="form-control rounded-pill bg-light">
                        @if (Model?.Status != null)
                        {
                            @if (Model.Status.ToString() == "Đang làm")
                            {
                                <span class="badge badge-success px-3 py-1">Đang làm</span>
                            }
                            else if(Model.Status.ToString() == "Nghỉ việc")
                            {
                                <span class="badge badge-warning px-3 py-1">Nghỉ việc</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary px-3 py-1">Không xác định</span>
                            }
                        }
                    </div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user-shield me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Role)</label>
                    <div class="form-control rounded-pill bg-light">@(Model?.Role != null ? Model.Role.RoleName : "Không xác định")</div>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadModal('@Url.Action("Edit", "Staffs", new { id = Model?.StaffId })')">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>
            <a class="btn btn-secondary rounded-pill px-4" href="@Url.Action("Index")">
                <i class="fas fa-times me-2"></i>Đóng
            </a>
        </div>
    </div>
</div>