@model OfficePlantCare.Models.CareSchedule
@{
    ViewData["Title"] = "Xóa lịch chăm sóc";
}

<link rel="stylesheet" href="~/assets/css/delete.css" />

<div class="modal-body p-4">
    <div class="card shadow-sm border-0 rounded-lg p-1 text-center">
        <h3 class="text-danger text-center font-weight-bold mb-4"><i class="fa-solid fa-exclamation-triangle me-2"></i> XÁC NHẬN XÓA LỊCH CHĂM SÓC</h3>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.ScheduleId" />

            <!-- Thông tin tối giản -->
            <div class="mb-4">
                <p class="text-muted mb-3">Bạn có chắc chắn muốn xóa lịch chăm sóc vào ngày <strong>@Model.ScheduledDate.ToString("dd/MM/yyyy")</strong> không?</p>
            </div>

            <!-- Buttons -->
            <div class="form-group d-flex gap-3 justify-content-center">
                <button type="submit" class="btn btn-danger rounded-pill px-4">
                    <i class="fa-solid fa-trash me-2"></i>Xóa
                </button>
                <button type="button" class="btn btn-secondary rounded-pill px-4" onclick="window.location.href='@Url.Action("Index")'">
                    <i class="fas fa-times me-2"></i>Hủy
                </button>
            </div>
        </form>
    </div>
</div>