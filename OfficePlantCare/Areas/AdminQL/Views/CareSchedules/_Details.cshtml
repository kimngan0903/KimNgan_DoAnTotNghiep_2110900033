@model OfficePlantCare.Models.CareSchedule

@{
    ViewData["Title"] = "Chi tiết Lịch chăm sóc";
}

<link rel="stylesheet" href="~/assets/css/details.css" />

<div class="modal-body p-0">
    <div class="card shadow-sm border-0 rounded-lg p-1">
        <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-info-circle me-2"></i> CHI TIẾT LỊCH CHĂM SÓC</h3>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-day me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.ScheduledDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.ScheduledDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-clock me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.ScheduledTime)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.ScheduledTime)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-check me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.ActualDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.ActualDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-hourglass-half me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Duration)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Duration)</div>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-file-contract me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.ContractId)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Contract.ContractCode)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-shopping-cart me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.OrderId)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Order.OrderId)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.StaffId)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Staff.StaffName)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-toggle-on me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Status)</label>
                    <div class="form-control rounded-pill bg-light">
                        @if (Model?.Status.ToString() == "Hoàn thành")
                        {
                            <span class="badge badge-success px-3 py-1">Hoàn thành</span> <!-- Màu xanh -->
                        }
                        else if (Model?.Status.ToString() == "Đang thực hiện")
                        {
                            <span class="badge badge-warning px-3 py-1">Đang thực hiện</span> <!-- Màu vàng -->
                        }
                        else if (Model?.Status.ToString() == "Chưa thực hiện")
                        {
                            <span class="badge badge-danger px-3 py-1">Chưa thực hiện</span> <!-- Màu đỏ -->
                        }
                        else
                        {
                            <span class="badge badge-secondary px-3 py-1">Không xác định</span> <!-- Màu xám nếu giá trị null -->
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadModal('@Url.Action("Edit", "CareSchedules", new { id = Model?.ScheduleId })')">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>
            <a class="btn btn-secondary rounded-pill px-4" href="@Url.Action("Index")">
                <i class="fas fa-times me-2"></i>Đóng
            </a>
        </div>
    </div>
</div>