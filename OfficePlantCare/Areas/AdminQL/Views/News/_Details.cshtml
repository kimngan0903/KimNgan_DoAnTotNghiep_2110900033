@model OfficePlantCare.Models.News

@{
    ViewData["Title"] = "Chi tiết Tin tức";
}

<link rel="stylesheet" href="~/assets/css/details.css" />

<div class="modal-body p-0">
    <div class="card shadow-sm border-0 rounded-lg p-1">
        <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-info-circle me-2"></i> CHI TIẾT TIN TỨC</h3>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-heading me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Title)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Title)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-file-alt me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Description)</label>
                    <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="3" readonly>@Html.DisplayFor(model => model.Description)</textarea>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-image me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Image)</label>
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model?.Image))
                        {
                            <img src="@Url.Content(Model.Image)" alt="News Image" class="rounded shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/default-image.png" alt="Default Image" class="rounded shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
                        }
                    </div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-file-lines me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Content)</label>
                    <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="4" readonly>@Html.Raw(Model?.Content)</textarea>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-plus me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.CreatedDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.CreatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-check me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.UpdatedDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.UpdatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-toggle-on me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Status)</label>
                    <div class="form-control rounded-pill bg-light">
                        @if (Model?.Status != null)
                        {
                            @if (Model.Status.ToString() == "Hiển thị")
                            {
                                <span class="badge badge-success px-3 py-1">Hiển thị</span>
                            }
                            else if (Model.Status.ToString() == "Ẩn")
                            {
                                <span class="badge badge-warning px-3 py-1">Ẩn</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary px-3 py-1">Không xác định</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadModal('@Url.Action("Edit", "News", new { id = Model?.NewsId })')">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>
            <a class="btn btn-secondary rounded-pill px-4" href="@Url.Action("Index")">
                <i class="fas fa-times me-2"></i>Đóng
            </a>
        </div>
    </div>
</div>