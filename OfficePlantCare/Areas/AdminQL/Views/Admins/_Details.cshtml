@model OfficePlantCare.Models.Admin

@{
    ViewData["Title"] = "Chi tiết Admin";
}

<link rel="stylesheet" href="~/assets/css/details.css" />

<div class="modal-body p-0">
    <div class="card shadow-sm border-0 rounded-lg p-1">
        <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-info-circle me-2"></i> CHI TIẾT THÔNG TIN ADMIN</h3>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Username)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Username)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-lock me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.PasswordHash)</label>
                    <textarea class="form-control bg-light px-3 py-2 rounded-3" rows="2" readonly>@Html.DisplayFor(model => model.PasswordHash)</textarea>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-envelope me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Email)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Email)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-map-marker-alt me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Address)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Address)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user-shield me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Role)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Role.RoleName)</div>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-plus me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.CreatedDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.CreatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-check me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.UpdatedDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.UpdatedDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-toggle-on me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Status)</label>
                    <div class="form-control rounded-pill bg-light">
                        @if (Model?.Status != null && Model.Status.ToString() == "Hoạt động")
                        {
                            <span class="badge badge-success px-3 py-1">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge badge-danger px-3 py-1">Không hoạt động</span>
                        }
                    </div>
                </div>
                <!-- Avatar Section -->
                <div class="form-group mb-4">
                    <label class="control-label fw-bold text-muted d-block">
                        <i class="fa-solid fa-image me-2"></i>@Html.DisplayNameFor(model => model.Avatar)
                    </label>
                    @if (!string.IsNullOrEmpty(Model?.Avatar))
                    {
                        <div class="mb-3">
                            <img src="@Url.Content(Model.Avatar)" alt="Avatar" class="rounded-circle shadow-sm avatar-preview" style="width: 120px; height: 120px; object-fit: cover;" />
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <img src="~/images/default-avatar.png" alt="Default Avatar" class="rounded-circle shadow-sm avatar-preview" style="width: 120px; height: 120px; object-fit: cover;" />
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadModal('@Url.Action("Edit", "Admins", new { id = Model?.AdminId })')">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>
            <button type="button" class="btn btn-secondary rounded-pill px-4" data-dismiss="modal">
                <i class="fas fa-times me-2"></i>Đóng
            </button>
        </div>
    </div>
</div>