@model OfficePlantCare.Models.Customer

@{
    ViewData["Title"] = "Chỉnh sửa thông tin khách hàng";
}

<link rel="stylesheet" href="~/assets/css/edit.css" />

<div class="card shadow-sm border-0 rounded-lg p-1">
    <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-pen-to-square me-2"></i>CHỈNH SỬA THÔNG TIN KHÁCH HÀNG</h3>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        <input type="hidden" asp-for="CustomerId" />

        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user me-2"></i>
                    <label asp-for="CustomerName" class="control-label fw-bold text-muted"></label>
                    <input asp-for="CustomerName" class="form-control rounded-pill" placeholder="Nhập tên khách hàng" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-envelope me-2"></i>
                    <label asp-for="Email" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Email" class="form-control rounded-pill" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-phone me-2"></i>
                    <label asp-for="Phone" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Phone" class="form-control rounded-pill" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-map-marker-alt me-2"></i>
                    <label asp-for="Address" class="control-label fw-bold text-muted"></label>
                    <input asp-for="Address" class="form-control rounded-pill" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-lock me-2"></i>
                    <label asp-for="PasswordHash" class="control-label fw-bold text-muted"></label>
                    <input asp-for="PasswordHash" class="form-control rounded-pill" placeholder="Nhập mật khẩu" readonly />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-toggle-on me-2"></i>
                    <label asp-for="Status" class="control-label fw-bold text-muted"></label>
                    <select asp-for="Status" class="form-control custom-select rounded-pill">
                        <option value="Hoạt động">Hoạt động</option>
                        <option value="Không hoạt động">Không hoạt động</option>
                        <option value="Bị khóa">Bị khóa</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-save me-2"></i>Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </form>
</div>
