@model OfficePlantCare.Models.Order

@{
    ViewData["Title"] = "Chi tiết Đơn hàng";
}

<link rel="stylesheet" href="~/assets/css/details.css" />

<div class="modal-body p-0">
    <div class="card shadow-sm border-0 rounded-lg p-1">
        <h3 class="text-success text-center font-weight-bold mb-4"><i class="fa-solid fa-info-circle me-2"></i> CHI TIẾT ĐƠN HÀNG</h3>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-day me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.OrderDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.OrderDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-dollar-sign me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.TotalPrice)</label>
                    <div class="form-control rounded-pill bg-light">@(Model?.TotalPrice?.ToString("N0").Replace(",", ".") + " VNĐ" ?? "N/A")</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-calendar-check me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.PaymentDate)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.PaymentDate)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-money-check-alt me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.PaymentStatus)</label>
                    <div class="form-control rounded-pill bg-light">
                        @if (Model?.PaymentStatus == "Đã thanh toán")
                        {
                            <span class="badge badge-success px-3 py-1">Đã thanh toán</span>
                        }
                        else if (Model?.PaymentStatus == "Chưa thanh toán")
                        {
                            <span class="badge badge-warning px-3 py-1">Chưa thanh toán</span>
                        }
                        else if (Model?.PaymentStatus == "Hoàn tiền")
                        {
                            <span class="badge badge-danger px-3 py-1">Hoàn tiền</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary px-3 py-1">Chưa xác định</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <i class="fa-solid fa-toggle-on me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Status)</label>
                    <div class="form-control rounded-pill bg-light">
                        @if (Model?.Status == "Chờ xử lý")
                        {
                            <span class="badge badge-warning px-3 py-1">Chờ xử lý</span>
                        }
                        else if (Model?.Status == "Đã xác nhận")
                        {
                            <span class="badge badge-info px-3 py-1">Đã xác nhận</span>
                        }
                        else if (Model?.Status == "Đã hoàn thành")
                        {
                            <span class="badge badge-success px-3 py-1">Đã hoàn thành</span>
                        }
                        else if (Model?.Status == "Hủy")
                        {
                            <span class="badge badge-danger px-3 py-1">Hủy</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary px-3 py-1">Chưa xác định</span>
                        }
                    </div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.CustomerId)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Customer.CustomerName)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-credit-card me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.PaymentMethodId)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.PaymentMethod.MethodName)</div>
                </div>
                <div class="form-group mb-4">
                    <i class="fa-solid fa-user-tie me-2"></i>
                    <label class="control-label fw-bold text-muted">@Html.DisplayNameFor(model => model.StaffId)</label>
                    <div class="form-control rounded-pill bg-light">@Html.DisplayFor(model => model.Staff.StaffName)</div>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group d-flex gap-3 justify-content-center">
            <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadModal('@Url.Action("Edit", "Orders", new { id = Model?.OrderId })')">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>
            <a class="btn btn-secondary rounded-pill px-4" href="@Url.Action("Index")">
                <i class="fas fa-times me-2"></i>Đóng
            </a>
        </div>
    </div>
</div>